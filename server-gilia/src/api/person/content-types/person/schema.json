{
  "kind": "collectionType",
  "collectionName": "people",
  "info": {
    "singularName": "person",
    "pluralName": "people",
    "displayName": "Person"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "full_name": {
      "type": "string"
    },
    "role": {
      "type": "string"
    },
    "biography": {
      "type": "text"
    },
    "photo": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "social_links": {
      "type": "email"
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project",
      "mappedBy": "team_members"
    },
    "posts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::post.post",
      "mappedBy": "authors"
    }
  }
}
